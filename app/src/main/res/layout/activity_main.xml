<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/my_fon_calculator"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/scoreboard"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:ellipsize="end"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="0"
        android:textSize="77sp"
        android:textColor="@color/white"
        android:gravity="bottom|end"
        android:padding="28dp"/>

    <LinearLayout
        android:id="@+id/linear_one"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/scoreboard"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="4dp"
        android:weightSum="4">

        <Button
            android:id="@+id/seven"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="4dp"
            android:layout_weight="1"
            android:background="@drawable/button_round"
            android:gravity="center"
            android:text="7"
            android:textColor="@color/white"
            android:textSize="60sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/eight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="8"
            android:layout_weight="1"
            android:textSize="60sp"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_marginHorizontal="4dp"
            android:background="@drawable/button_round"/>
        <Button
            android:id="@+id/nine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="9"
            android:layout_weight="1"
            android:textSize="60sp"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_marginHorizontal="4dp"
            android:background="@drawable/button_round"/>
        <Button
            android:id="@+id/divide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="รท"
            android:layout_weight="1"
            android:textSize="60sp"
            android:textColor="@color/white"
            android:gravity="center"
            android:background="@drawable/button_round"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_two"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/linear_one"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="4dp"
        android:weightSum="4">

        <Button
            android:id="@+id/four"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="4dp"
            android:layout_weight="1"
            android:background="@drawable/button_round"
            android:gravity="center"
            android:text="4"
            android:textColor="@color/white"
            android:textSize="60sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/five"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="4dp"
            android:layout_weight="1"
            android:background="@drawable/button_round"
            android:gravity="center"
            android:text="5"
            android:textColor="@color/white"
            android:textSize="60sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <Button
            android:id="@+id/six"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="6"
            android:layout_weight="1"
            android:textSize="60sp"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_marginHorizontal="4dp"
            android:background="@drawable/button_round"/>
        <Button
            android:id="@+id/multiply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="ั"
            android:layout_weight="1"
            android:textSize="60sp"
            android:textColor="@color/white"
            android:gravity="center"
            android:background="@drawable/button_round"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_three"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/linear_two"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="4dp"
        android:weightSum="4">
        <Button
            android:id="@+id/one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="1"
            android:layout_weight="1"
            android:textSize="60sp"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_marginHorizontal="4dp"
            android:background="@drawable/button_round" />
        <Button
            android:id="@+id/two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="4dp"
            android:layout_weight="1"
            android:background="@drawable/button_round"
            android:gravity="center"
            android:text="2"
            android:textColor="@color/white"
            android:textSize="60sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <Button
            android:id="@+id/three"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="3"
            android:layout_weight="1"
            android:textSize="60sp"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_marginHorizontal="4dp"
            android:background="@drawable/button_round"/>
        <Button
            android:id="@+id/minus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="-"
            android:layout_weight="1"
            android:textSize="60sp"
            android:textColor="@color/white"
            android:gravity="center"
            android:background="@drawable/button_round"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_four"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/linear_three"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="4dp"
        android:weightSum="4">
        <Button
            android:id="@+id/discharge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="AC"
            android:layout_weight="1"
            android:textSize="35sp"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_marginHorizontal="4dp"
            android:background="@drawable/button_round" />
        <Button
            android:id="@+id/zero"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="4dp"
            android:layout_weight="1"
            android:background="@drawable/button_round"
            android:gravity="center"
            android:text="0"
            android:textColor="@color/white"
            android:textSize="60sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <Button
            android:id="@+id/equally"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="="
            android:layout_weight="1"
            android:textSize="60sp"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_marginHorizontal="4dp"
            android:background="@drawable/button_round"/>
        <Button
            android:id="@+id/plus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="+"
            android:layout_weight="1"
            android:textSize="60sp"
            android:textColor="@color/white"
            android:gravity="center"
            android:background="@drawable/button_round"/>
    </LinearLayout>





</androidx.constraintlayout.widget.ConstraintLayout>